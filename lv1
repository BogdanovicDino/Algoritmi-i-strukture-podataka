/*
Uporabom funkcije int rand(void); koja je definirana u <stdlib.h>
načiniti općenitu funkciju za generiranje polja s n pseudoslučajnih brojeva čija se
vrijednost nalazi između zadane donje i gornje granice. Prototip funkcije je:
void gen_arr( float V[], int n, float dg, float gg );
*/
#include <stdio.h>
#include <time.h>
#include <stdlib.h>

void gen_arr( float V[], int n, float dg, float gg ){
  for(int i=0;i<n;i++){  
    V[i]=((float)rand()/RAND_MAX)*(gg-dg)+dg;
  }
}


int sekv_pret( float V[], int n, float x ){
    for(int i=0;i<n;i++){
        if(V[i]==x){
            return i;
            
        }
        
    }
        return -1;
}


void sort( float V[], int n ){
    
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-i-1;j++){
            if(V[j]>V[j+1]){
               float temp=V[j];
               V[j]=V[j+1];
               V[j+1]=temp;
            }
        }
    }
}


int bin_pret( float V[], int n, float x ){
    int donja=0;
    int gornja=n-1;
    
    while(donja<=gornja){
        int sredina=(donja+gornja)/2;
        if(V[sredina]==x){
            return sredina;
        }
        if(sredina<x){
            gornja=sredina+1;
        }
        
        if(sredina>x){
            donja=sredina+1;
        }
        return -1;
    }
    
    
    
}






int main()
{
    srand(time(NULL));
    int n=10000;
    float dg=5.00;
    float gg=25.00;
    float V[10000];
    
    gen_arr(V,n,dg,gg);
    
    clock_t start= clock();
    int z=sekv_pret(V,n,10.00);
    clock_t end =clock();
    printf("\n%d\n",z);
    
    double cpu_time_used = ((double)(end - start)) / CLOCKS_PER_SEC;

    printf("Vrijeme sekvenciajlnog pretrazivanjja: %.6f sekundi\n", cpu_time_used);
    clock_t startt=clock();
    sort(V,n);
        clock_t endd=clock();
    double cpu_time_usedd = ((double)(endd - startt)) / CLOCKS_PER_SEC;

    printf("Vrijeme sortiranja: %.6f sekundi\n", cpu_time_usedd);
    
    
    clock_t t1=clock();
    int y=bin_pret(V,n,10.00);
    clock_t t2=clock();
    
    double vrijeme=((double)(t2-t1))/CLOCKS_PER_SEC;
    printf("Vrijeme bin pretrazivanja: %.6f sekundi\n", vrijeme);
    printf("\n%d\n",y);
}
